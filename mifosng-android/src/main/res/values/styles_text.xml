<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" parent="AppTheme.Text" />

    <style name="TextView.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.BaseWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Base.Weight" parent="TextView.Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextView.Title" parent="TextView.Base">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextView.ConnectionSettings" parent="TextView.Base">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">"Connection settings"</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextView.Search" parent="TextView.Base">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:text">@string/client_search</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.Search.Results" parent="TextView.Search">
        <item name="android:text">@string/search_results</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>


    <style name="TextView.AppTitle" parent="TextView.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/mifos</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextView.Toolbar" parent="TextView.Base">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>