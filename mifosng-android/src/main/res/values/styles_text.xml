<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" />

    <style name="TextView.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.BaseWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Base.Weight" parent="TextView.Base">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="TextView.Title" parent="TextView.Base">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


    <style name="TextView.ConnectionSettings" parent="TextView.Base">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/connection_settings</item>
        <item name="android:textColor">#1976D2</item>
    </style>

    <style name="TextView.AppTitle" parent="TextView.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/mifos</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


</resources>