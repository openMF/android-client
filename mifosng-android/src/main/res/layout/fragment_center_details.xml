<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/container"
        style="@style/ScrollView.Base">

        <TableLayout
            android:id="@+id/tbl_centerDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                style="@style/Mifos.DesignSystem.TextStyle.Heading"
                android:textColor="@color/black"
                android:text="@string/center_details"
                android:paddingTop="@dimen/dimension_32_dp"
                android:paddingBottom="@dimen/layout_padding_16dp"/>

            <TableRow
                android:id="@+id/row_activation_date"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/activation_date" />

                <TextView
                    android:id="@+id/tv_center_activation_date"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:id="@+id/row_meeting_date"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/next_meeting_on" />

                <TextView
                    android:id="@+id/tv_meeting_date"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:id="@+id/row_meeting_frequency"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/meeting_frequency" />

                <TextView
                    android:id="@+id/tv_meeting_frequency"
                    android:layout_weight="1"
                    android:gravity="end" />

            </TableRow>

            <TableRow
                android:id="@+id/row_staff_name"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/staff_name" />

                <TextView
                    android:id="@+id/tv_staff_name"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/black"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dimension_32_dp"
                android:paddingBottom="@dimen/layout_padding_16dp"
                style="@style/Mifos.DesignSystem.TextStyle.Heading"
                android:textColor="@color/black"
                android:text="@string/summary_info"/>

            <TableRow
                android:id="@+id/row_active_clients"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/active_clients" />

                <TextView
                    android:id="@+id/tv_active_clients"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:id="@+id/row_active_group_loans"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/active_group_loans" />

                <TextView
                    android:id="@+id/tv_active_group_loans"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:id="@+id/row_active_client_loans"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/active_client_loans" />

                <TextView
                    android:layout_weight="1"
                    android:gravity="end"
                    android:id="@+id/tv_active_client_loans" />

            </TableRow>

            <TableRow
                android:id="@+id/row_active_group_borrowers"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/active_group_borrowers" />

                <TextView
                    android:id="@+id/tv_active_group_borrowers"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:id="@+id/row_active_client_borrowers"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/active_client_borrowers" />

                <TextView
                    android:id="@+id/tv_active_client_borrowers"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:id="@+id/row_active_overdue_group_loans"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/active_overdue_group_loans" />

                <TextView
                    android:id="@+id/tv_active_overdue_group_loans"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:id="@+id/row_active_overdue_client_loans"
                style="@style/Mifos.DesignSystem.Components.Table.Row">

                <TextView
                    android:layout_weight="1"
                    style="@style/Mifos.DesignSystem.TextStyle.Label"
                    android:text="@string/active_overdue_client_loans" />

                <TextView
                    android:id="@+id/tv_active_overdue_client_loans"
                    android:layout_weight="1"
                    android:gravity="end" />
            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_activate_center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/primary_dark"
            android:text="@string/activate_center" />
    </LinearLayout>

</RelativeLayout>
