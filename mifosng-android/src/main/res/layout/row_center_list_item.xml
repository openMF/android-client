<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/center_name"
        android:id="@+id/tv_center_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/center_id"
        android:id="@+id/tv_center_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/staff_name"
        android:id="@+id/tv_staff_name"
        android:layout_below="@+id/tv_center_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/staff_id"
        android:id="@+id/tv_staff_id"
        android:layout_alignBottom="@+id/tv_staff_name"
        android:layout_alignLeft="@+id/tv_center_id"
        android:layout_alignStart="@+id/tv_center_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/office"
        android:id="@+id/tv_office_name"
        android:layout_below="@+id/tv_staff_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/office_id"
        android:id="@+id/tv_office_id"
        android:layout_alignBottom="@+id/tv_office_name"
        android:layout_alignLeft="@+id/tv_staff_id"
        android:layout_alignStart="@+id/tv_staff_id" />
</RelativeLayout>