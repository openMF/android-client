<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout.Base">

    <TextView
        android:id="@+id/tv_search"
        style="@style/TextView.Search" />

    <android.support.design.widget.TextInputLayout style="@style/TextInput.Base">

        <EditText
            android:id="@+id/et_search_by_id"
            style="@style/EditText.BaseWidth"
            android:hint="@string/client_search_hint" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/bt_searchClient"
        style="@style/Button.Base"
        android:layout_marginTop="10dp"
        android:text="@string/search" />

    <TextView
        android:id="@+id/tv_title_search_results"
        style="@style/TextView.Search.Results"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_searchResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true" />
</LinearLayout>